[flake8]
# See https://flake8.pycqa.org/en/latest/user/options.html#options-and-their-descriptions
# for available options

exclude =
    **/__pycache__,
    *.pyc,
    .venv,
    build,

# See https://www.flake8rules.com/ for a list of all builtin error codes
ignore =
    E203, E501, W503
per-file-ignores =
    __init__.py: F401
    conftest.py: F401

show_source = True
statistics = True
